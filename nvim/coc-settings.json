{
	"languageserver": {
		"haskell": {
			"command": "hie-wrapper",
			"rootPatterns": [
				".stack.yaml",
				"cabal.config",
				"package.yaml"
			],
			"filetypes": [
				"hs",
				"lhs",
				"haskell"
			],
			"initializationOptions": {
				"languageServerHaskell": {
					"hlintOn": true
				}
			}
		},
		"golang": {
			"command": "gopls",
			"rootPatterns": [
				"go.mod",
				".vim/",
				".git/",
				".hg/"
			],
			"filetypes": [
				"go"
			],
			"initializationOptions": {
				"usePlaceholders": true,
				"completeUnimported": true,
				"deepCompletion": true
			}
		}
	},
	"suggest.minTriggerInputLength": 1,
	"snippets.ultisnips.directories": [
		"UltiSnips",
		"/Users/filip/.config/nvim/plugged/vim-go/gosnippets/UltiSnips"
	]
}
